<h1>Listing attendings</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendings.each do |attending| %>
      <tr>
        <td><%= attending.first_name %></td>
        <td><%= attending.last_name %></td>
        <td><%= attending.email %></td>
        <td><%= link_to 'Show', attending %></td>
        <td><%= link_to 'Edit', edit_attending_path(attending) %></td>
        <td><%= link_to 'Destroy', attending, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attending', new_attending_path %>
